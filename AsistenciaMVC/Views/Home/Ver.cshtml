@model Entity.Alumno
@{
    ViewBag.Title = Model.Nombre + " " + Model.Apellido;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li> <a href="~/">Alumnos</a> </li>
    <li class="active">@(Model.Nombre + "  " + Model.Apellido) </li>
</ol>

<div class="panel panel-default">
    <div class="panel panel-heading"> Información Personal del Alumno </div>
    <div class="panel panel-body">
        <dl class="dl-horizontal" >
            <dt>Nombre</dt>
            <dd>@Model.Nombre</dd>
            <dt>Apellido</dt>
            <dd>@Model.Apellido</dd>
            <dt>Sexo</dt>
            <dd>@(Model.Sexo == 1 ? "Masculino" : "Femenino")</dd>
            <dt>Fecha de Nacimiento</dt>
            <dd>@Model.FechaNacimiento</dd>
        </dl>
    </div>
</div>
@if (Model.AlumnoCurso.Count > 0)
{
    <div class="panel panel-default">
       <div class="panel panel-heading"> Asignaturas Tomadas </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Cursos</th>
                    <th style="width:60px">Nota</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.AlumnoCurso)
                {
                    <tr>
                        <td>@c.Curso.Nombre</td>
                        <td class="text-right">@c.Nota</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else {
<p>No hay cursos asignados a este Almuno.</p>
}
<li> <a href="~/Home/Index">Regresar</a> </li>


